@model IEnumerable<PR_Top_Service_MVC.Models.PersonAdmin>

@{
    ViewData["Title"] = "Index";
}

<h1>Administradores</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Registrar nuevo</a>
</p>
<div class="tabla-contenedor">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Segundo Apellido
            </th>
            <th>
                Correo Electronico
            </th>
            <th>
                Numero de Celular
            </th>
            <th>
                Fecha de Nacimiento
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.PersonAdminUser)
        {
        <tr>
            <td>
                    @item.name
            </td>
            <td>
                    @item.lastName
            </td>
            <td>
                    @item.secondLastName
            </td>
            <td>
                    @item.email
            </td>
            <td>
                    @item.cellPhoneNumber
            </td>
            <td>
                    @item.Birthdate
            </td>
            
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.idPAU">Editar</a> |
                    
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idPAU">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
