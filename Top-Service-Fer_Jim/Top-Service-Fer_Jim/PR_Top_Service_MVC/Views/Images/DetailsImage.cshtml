@model IEnumerable<PR_Top_Service_MVC.Models.Image>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de comprobantes</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Imagen del servicio
            </th>
            <th>
                Servicio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Imaged" class="imageDetail"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdServiceNavigation.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdImages" class="btn btn-success">
                        <i class="fa fa-pencil " style="color: #FFFFFF;"></i>
                    </a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.IdImages" class="btn btn-danger">
                        <i class="fa fa-trash " style="color: #FFFFFF;"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
