@model IEnumerable<PR_Top_Service_MVC.Models.JobArea>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Areas de Trabajo</h1>
<br />
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">Crear nueva area de trabajo</a>
    </p>
}
<style>
    .col {
        width: 18rem; /* Establece el ancho fijo para todas las columnas */
        height: auto; /* Ajusta la altura automáticamente según el contenido */
        margin: 10px; /* Espaciado entre las columnas */
    }
</style>
<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var item in Model)
    {
        
        <div class="col">
            <div class="card text-center" style="width: 18rem; height:18rem">
                <div class="card-body">
                    <h2 class="card-title">@item.Name</h2>
                    <p class="card-text"> @item.Description</p>
                    <a asp-action="ProfessionalArea" asp-controller="People" asp-route-id="@item.idArea" class="btn btn-primary">Ver Empleados</a> <br>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-controller="JobArea" asp-route-id="@item.idArea">
                            <i class="fa fa-pencil-square-o fa-2x" style="color: #5480a3;margin:2px;"></i>
                            <span class="visually-hidden">(current)</span>
                        </a>

                       
                    }

                </div>
            </div>
        </div>
    }
</div>
