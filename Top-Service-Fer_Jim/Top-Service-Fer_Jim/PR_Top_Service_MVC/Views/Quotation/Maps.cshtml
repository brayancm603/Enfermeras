@model IEnumerable<PR_Top_Service_MVC.Models.Quotation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="tabla-contenedor">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>

                    @Html.DisplayNameFor(model => model.IdProfesional)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCostumerNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProfesional)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCostumerNavigation.IdCostumer)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdQuotation">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdQuotation">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdQuotation">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>