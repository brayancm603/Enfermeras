@model PR_Top_Service_MVC.Models.Service

@{
    ViewData["Title"] = "Edit";
}

<h1>Edicion</h1>

<h4>Servicios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdService" />
            <div class="form-group" hidden>
                <label asp-for="IdAdmin" class="control-label"></label>
                <select asp-for="IdAdmin" class="form-control" asp-items="ViewBag.IdAdmin"></select>
                <span asp-validation-for="IdAdmin" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IdProfessional" class="control-label"></label>
                <select asp-for="IdProfessional" class="form-control" asp-items="ViewBag.IdProfessional"></select>
                <span asp-validation-for="IdProfessional" class="text-danger"></span>
            </div>
             <div class="form-group" hidden>
                <label asp-for="IdCostumer" class="control-label"></label>
                <select asp-for="IdCostumer" class="form-control" asp-items="ViewBag.IdCostumer"></select>
                <span asp-validation-for="IdCostumer" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label  class="control-label">Descripcion del Problema</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Fecha de Inicio</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br /><br /><br />
