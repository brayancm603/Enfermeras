@model IEnumerable<PR_Top_Service_MVC.Models.CustomerUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="tabla-contenedor">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <i class="fa fa-map-marker" style="color: black;"></i>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    <i class="fa fa-user" style="color: black;"></i>

                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    <i class="fa fa-user" style="color: black;"></i>

                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    <i class="fa fa-user" style="color: black;"></i>
                    @Html.DisplayNameFor(model => model.SecondLastName)
                </th>
                <th>
                    <i class="fa fa-home" style="color: black;"></i>
                    @Html.DisplayNameFor(model => model.IdDepartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th>
                    <i class="fa fa-envelope-o" style="color: black;"></i>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    <i class="fa fa-check-circle-o" style="color: black;"></i>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecondLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdDepartment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdCostumer">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdCostumer">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdCostumer">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>