@model PR_Top_Service_MVC.Models.Postulation

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<h4>Postulacion</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Titulos Profesionales</label>
                    <textarea asp-for="ProfessionalTitles" class="form-control col-12 col-md-6"></textarea>
                    <span asp-validation-for="ProfessionalTitles" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="idArea" class="control-label"></label>
                    <select asp-for="idArea" class="form-control col-12 col-md-6" asp-items="ViewBag.idArea"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Certificaciones</label>
                    <textarea asp-for="Certification" class="form-control col-12 col-md-6"></textarea>
                    <span asp-validation-for="Certification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Experiencia Laboral</label>
                    <textarea asp-for="WorkExperience" class="form-control col-12 col-md-6"></textarea>
                    <span asp-validation-for="WorkExperience" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Direccion</label>
                    <input asp-for="Address" class="form-control col-12 col-md-6" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control col-12 col-md-6" value="1" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<br />


