@model PR_Top_Service_MVC.Models.Postulation

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Postulation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPostulation" />
            <div class="form-group">
                <label  class="control-label">Titulos Profesionales</label>
                <input asp-for="ProfessionalTitles" class="form-control" />
                <span asp-validation-for="ProfessionalTitles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Certicaciones</label>
                <input asp-for="Certification" class="form-control" />
                <span asp-validation-for="Certification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Experiencia Laboral</label>
                <input asp-for="WorkExperience" class="form-control" />
                <span asp-validation-for="WorkExperience" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label  class="control-label">Direccion</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="IdProfessional" class="control-label"></label>
                <select asp-for="IdProfessional" class="form-control" asp-items="ViewBag.IdProfessional"></select>
                <span asp-validation-for="IdProfessional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

