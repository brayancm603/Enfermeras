@model IEnumerable<PR_Top_Service_MVC.Models.Postulation>

@{
    ViewData["Title"] = "Index";
}

<h1>Postulacion</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Postular</a>
</p>
<div class="tabla-contenedor">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Titulos Profesionales
            </th>
            <th>
                Certificaciones
            </th>
            <th>
                Experiencia Laboral
            </th>
           
            <th>
                Direccion
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessionalTitles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkExperience)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
           
            <td>
               
                 
                <a asp-action="Delete" asp-route-id="@item.IdPostulation">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
